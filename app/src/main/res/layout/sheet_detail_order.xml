<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/sheet_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/detail_order_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/number_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Objednávka"
        android:textSize="25dp"
        android:textColor="@color/primary"
        android:textStyle="bold"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/primary"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <RelativeLayout
            android:id="@+id/layout_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"

            >

        <TextView
            android:id="@+id/title_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produkt(y)"
            android:textColor="@color/primary"
            android:paddingBottom="5dp"
            android:textStyle="bold"
            />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="#D3D3D3" />

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Název:"
            android:layout_marginTop="5dp"
            android:textColor="@color/primary"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:layout_below="@+id/title_product"
            />

        <TextView
            android:id="@+id/txt_name_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_product"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:text="iPhone 12 128 GB black"
            android:textColor="@color/primary" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/title_product"
            android:layout_toEndOf="@+id/txt_name_product"
            android:layout_toRightOf="@+id/txt_name_product"
            android:text="(1ks)"
            android:textColor="@color/primary"
            android:textStyle="bold"/>


            <TextView
                android:id="@+id/title_registr_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evidenční číslo:"
                android:textColor="@color/primary"
                android:layout_marginTop="5dp"
                android:paddingLeft="25dp"
                android:textStyle="bold"
                android:layout_below="@+id/txt_name_product"
                />

            <TextView
                android:id="@+id/txt_register_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name_product"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:layout_marginStart="140dp"
                android:layout_marginLeft="140dp"
                android:text="57892348672335"
                android:textColor="@color/primary" />



        </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_below="@id/layout_product"
        >

        <TextView
            android:id="@+id/title_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Zákazník"
            android:paddingBottom="5dp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#D3D3D3" />

        <TextView
            android:id="@+id/title_name_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jméno:"
            android:layout_marginTop="5dp"
            android:textColor="@color/primary"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:layout_below="@+id/title_customer"
            />
        <TextView
            android:id="@+id/txt_name_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_customer"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:text="Adam Daniel"
            android:textColor="@color/primary" />

        <TextView
            android:id="@+id/title_email_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:layout_marginTop="5dp"
            android:textColor="@color/primary"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:layout_below="@+id/txt_name_customer"
            />

        <TextView
            android:id="@+id/txt_email_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_name_customer"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:text="adam.dany@seznam.cz"
            android:textColor="@color/primary" />

        <TextView
            android:id="@+id/title_phone_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefonní číslo:"
            android:layout_marginTop="5dp"
            android:textColor="@color/primary"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:layout_below="@+id/title_email_customer"
            />

        <TextView
            android:id="@+id/txt_phone_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_email_customer"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:text="+420 722 231 123"
            android:textColor="@color/primary" />


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/layout_office"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_below="@id/layout_customer"
        >

        <TextView
            android:id="@+id/title_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Naskladnění"
            android:paddingBottom="5dp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#D3D3D3" />


        <TextView
            android:id="@+id/title_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pobočka:"
            android:layout_marginTop="5dp"
            android:textColor="@color/primary"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:layout_below="@+id/title_delivery"
            />

        <TextView
            android:id="@+id/txt_offic_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_delivery"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:text="Nádražní 2924/75"
            android:textColor="@color/primary" />
        <TextView
            android:id="@+id/txt_office_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_offic_address"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:text="Ostrava - centrum"
            android:textColor="@color/primary" />

        <TextView
            android:id="@+id/title_locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Umístění:"
            android:layout_marginTop="5dp"
            android:textColor="@color/primary"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:layout_below="@+id/txt_office_name"
            />

        <TextView
            android:id="@+id/txt_locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_office_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:text="Řada 12, Místo 4"
            android:textColor="@color/primary" />

        <TextView
            android:id="@+id/txt_date_locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_locate"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:text="11.4.2022 10:15:58"
            android:textColor="@color/primary" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_below="@id/layout_office"
        >

        <TextView
            android:id="@+id/title_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Objednávka"
            android:paddingBottom="5dp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#D3D3D3" />

        <TextView
            android:id="@+id/title_date_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Objednáno dne:"
            android:layout_marginTop="5dp"
            android:textColor="@color/primary"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:layout_below="@+id/title_order"
            />

        <TextView
            android:id="@+id/txt_date_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_order"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:text="10.4.2022 22:29:03"
            android:textColor="@color/primary" />

        <TextView
            android:id="@+id/title_date_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uhrazeno dne:"
            android:layout_marginTop="5dp"
            android:textColor="@color/primary"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:layout_below="@+id/txt_date_order"
            />

        <TextView
            android:id="@+id/txt_date_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_date_order"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:text="10.4.2022 22:31:29"
            android:textColor="@color/primary" />

        <TextView
            android:id="@+id/title_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stav:"
            android:layout_marginTop="5dp"
            android:textColor="@color/primary"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:layout_below="@+id/title_date_pay"
            />

        <ImageView
            android:id="@+id/img_status_bar"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_below="@id/title_date_pay"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/status_bar_pe" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_date_pay"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/img_status_bar"
            android:layout_toRightOf="@+id/img_status_bar"
            android:text="Čekající"
            android:textColor="@color/primary" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_below="@id/layout_order"
        >
        <TextView
            android:id="@+id/title_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Platba"
            android:paddingBottom="5dp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#D3D3D3" />
        <TextView
            android:id="@+id/title_type_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Typ platby:"
            android:layout_marginTop="5dp"
            android:textColor="@color/primary"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:layout_below="@+id/title_payment"
            />

        <TextView
            android:id="@+id/txt_type_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_payment"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:text="Kartou"
            android:textColor="@color/primary" />

        <TextView
            android:id="@+id/title_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zaplaceno:"
            android:layout_marginTop="5dp"
            android:textColor="@color/primary"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:layout_below="@+id/txt_type_payment"
            />

        <TextView
            android:id="@+id/txt_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_type_payment"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:text="NE"
            android:textColor="@color/primary" />

        <TextView
            android:id="@+id/title_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sleva:"
            android:layout_marginTop="5dp"
            android:textColor="@color/primary"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:layout_below="@+id/title_paid"
            />

        <TextView
            android:id="@+id/txt_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_paid"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:text="10%"
            android:textColor="@color/primary" />

        <Button
            android:id="@+id/btn_edit_sale"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/txt_discount"
            android:layout_toRightOf="@+id/txt_discount"
            android:background="@drawable/ic_edit_sale"
            android:layout_below="@+id/txt_paid"

            />

        <TextView
            android:id="@+id/title_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Celková cena:"
            android:layout_marginTop="5dp"
            android:textColor="@color/primary"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:layout_below="@+id/title_discount"
            />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_discount"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:text="21 831,00 Kč s DPH"
            android:textStyle="bold"
            android:textColor="@color/primary" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/layout_payment"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/primary"/>

        <TextView
            android:id="@+id/txt_waiting_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="ČEKÁNÍ NA NASKLADNĚNÍ"
            android:gravity="center"
            />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/txt_invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text=""
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:visibility="invisible"
                />

            <Button
                android:id="@+id/btn_payment"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_below="@+id/edT_bar"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="22dp"
                android:layout_marginRight="22dp"
                android:layout_toStartOf="@+id/txt_invisible"
                android:layout_toLeftOf="@+id/txt_invisible"
                android:backgroundTint="@color/primary"
                android:drawableLeft="@drawable/ic_payment"
                android:text="Platba"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_storno"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_below="@+id/edT_bar"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_toEndOf="@+id/txt_invisible"
                android:layout_toRightOf="@+id/txt_invisible"
                android:backgroundTint="@color/primary"
                android:drawableLeft="@drawable/ic_cancel"
                android:text="Storno"
                android:textColor="@color/white" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
</LinearLayout>