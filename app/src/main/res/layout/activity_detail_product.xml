<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:background="@drawable/bg_menu_s"

            >

            <TextView
                android:id="@+id/txt_nameg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Detail produktu"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_marginTop="30dp"
                >

            </TextView>


            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@+id/txt_nameg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_detail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="40dp"
                />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/primary"
                >

                <TextView
                    android:id="@+id/txt_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:text="Název:" />




                <TextView
                    android:id="@+id/txt_price_title"
                    android:layout_below="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:text="Cena:" />




                <TextView
                    android:id="@+id/txt_piece_title"
                    android:layout_below="@id/txt_price_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:text="Počet kusů:" />


                <TextView
                    android:id="@+id/txt_bar_code_title"
                    android:layout_below="@id/txt_piece_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:text="Čárový kód:" />

                <TextView
                    android:id="@+id/txt_line_title"
                    android:layout_below="@id/txt_bar_code_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:text="Řada:" />

                <TextView
                    android:id="@+id/txt_place_title"
                    android:layout_below="@id/txt_line_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:text="Místo:" />

                <TextView
                    android:id="@+id/txt_picture_title"
                    android:layout_below="@id/txt_place_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:text="Obrázek:"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/txt_desc_title"
                    android:layout_below="@id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:text="Popis:"
                    android:layout_marginTop="5dp"
                    />


                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="120dp"
                    android:layout_marginLeft="10dp"
                    android:text="TextView"
                    android:textColor="@color/primary" />


                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/txt_name"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="120dp"
                    android:layout_marginLeft="10dp"
                    android:text="TextView"
                    android:textColor="@color/primary" />


                <TextView
                    android:id="@+id/txt_piece"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/txt_price"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="120dp"
                    android:layout_marginLeft="10dp"
                    android:text="TextView"
                    android:textColor="@color/red" />


                <TextView
                    android:id="@+id/txt_bar_code"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/txt_piece_title"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="120dp"
                    android:layout_marginLeft="10dp"
                    android:text="TextView"
                    android:textColor="@color/primary" />

                <TextView
                    android:id="@+id/txt_line"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/txt_bar_code"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="120dp"
                    android:layout_marginLeft="10dp"
                    android:text="TextView"
                    android:textColor="@color/primary" />

                <TextView
                    android:id="@+id/txt_place"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/txt_line"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="120dp"
                    android:layout_marginLeft="10dp"
                    android:text="TextView"
                    android:textColor="@color/primary" />

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_place"
                    android:layout_marginStart="120dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/common_google_signin_btn_icon_dark_normal_background"
                    />

                <TextView
                    android:id="@+id/txt_desc"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/image"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="120dp"
                    android:layout_marginLeft="10dp"
                    android:text="TextView"
                    android:textColor="@color/primary"
                    android:layout_marginTop="5dp"/>




            </RelativeLayout>
        </ScrollView>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>